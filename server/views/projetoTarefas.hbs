    <form id="filtros" action="/projetos/projetoTarefas/{{idProjeto}}" method="post">
      <fieldset>
        <div class="d-flex align-content-center " style="width: 100%;">
          <div class="field">
            <label for="dataInicial">Data Inicial:</label><br>
            <input class="dp06 data" type="date" name="dataInicial" id="dataInicial"
              value="{{Filtros.filtro_dataInicial}}">
          </div>
          <div class="field" style="margin-left: 1ch;">
            <label for="dataFinal">Data Final:</label>
            <input class="dp06 data" type="date" name="dataFinal" id="dataFinal" value="{{Filtros.filtro_dataFinal}}">
          </div>

          <div class="field">
            <label for="sprints">Sprint:</label>
            <select class="dropdown" name="sprints" id="sprints">
              <optgroup>
                <option value="0">Todas</option>
                {{#each Sprints}}

                {{#selected idSprints ../Filtros.filtro_sprints }}
                <option value="{{idSprints}}" selected>{{nome}}</option>
                {{else}}
                <option value="{{idSprints}}">{{nome}}</option>
                {{/selected}}

                {{else}}
                {{/each}}
              </optgroup>
            </select>
          </div>

          <div class="field" id="search">
            <label for="pesquisa">Pesquisa:</label>

            {{#if Filtros.filtro_pesquisa}}
            <input class="dp06" type="text" name="pesquisa" id="pesquisa" size="30" value="{{Filtros.filtro_pesquisa}}">
            {{else}}
            <input class="dp06" type="text" name="pesquisa" id="pesquisa" size="30">
            {{/if}}

          </div>

          <div class="field">
            <label for="pesquisaOpcao">Critérios:</label>
            <select class="dropdown" name="pesquisaOpcao" id="pesquisaOpcao">

              {{#selected 1 Filtros.filtro_pesquisaOP }}
              <option value="1" selected>Código</option>
              {{else}}
              <option value="1">Código</option>
              {{/selected}}

              {{#selected 2 Filtros.filtro_pesquisaOP }}
              <option value="2" selected>Assunto</option>
              {{else}}
              <option value="2">Assunto</option>
              {{/selected}}

              {{#selected 3 Filtros.filtro_pesquisaOP }}
              <option value="3" selected>Autor</option>
              {{else}}
              <option value="3">Autor</option>
              {{/selected}}

            </select>
          </div>

          <div class="field">
            <label for="status">Status:</label>

            <select class="dropdown" name="status" id="idstatus">
              <optgroup>
                <option value="">Todos</option>
                {{#each Status}}

                {{#selected idStatus ../Filtros.filtro_status }}
                <option value="{{idStatus}}" selected>{{nome}}</option>
                {{else}}
                <option value="{{idStatus}}">{{nome}}</option>
                {{/selected}}

                {{else}}
                {{/each}}
              </optgroup>
            </select>
          </div>


          <div class="field d-flex align-content-center">
            <button type="button" class="btn btn-primary align-self-center filtrar" data-toggle="modal"
              data-target="#tagmodal">
              Tags
            </button>
            {{#if Filtros.filtro_tagsSelecionadas}}
            <input type="text" name="tagsSelecionadas" id="tagsSelecionadas"
              value="{{Filtros.filtro_tagsSelecionadas}}">
            {{else}}
            <input type="text" name="tagsSelecionadas" id="tagsSelecionadas" value="">
            {{/if}}

          </div>

          <div class="field d-flex align-content-center">
            <button class="btn align-self-center filtrar" type="submit" onclick="filtraTarefas()">
              Filtrar
            </button>
          </div>
        </div>
      </fieldset>
    </form>

    <div id="grid" class="row m-2 table-responsive-xl">
      <table class="table table-striped table-dark table-bordered table-hover ">
        <colgroup>
          <col span="1" style="min-width: 10ch; max-width: fit-content;">
          <col span="1" style="min-width: 30ch; max-width: fit-content;">
          <col span="1" style="min-width: 12ch; max-width: fit-content;">
          <col span="1" style="min-width: 20ch; max-width: fit-content;">
          <col span="1" style="min-width: 11ch; max-width: fit-content;">
          <col span="1" style="min-width: 11ch; max-width: fit-content;">
          <col span="1" style="min-width: 15ch; max-width: fit-content;">
        </colgroup>
        <thead>
          <tr>
            <th scope="col">Código</th>
            <th scope="col">Assunto</th>
            <th scope="col">Prioridade</th>
            <th scope="col">Autor</th>
            <th scope="col">Última resposta</th>
            <th scope="col">Data de criação</th>
            <th scope="col">Sprint</th>
          </tr>
        </thead>
        <tbody>
          {{#each Tarefa}}
          <tr {{!-- style="background-color: #DFA81B;" --}} onclick="abreTarefa({{idTarefas}})">
            <td class="codigo">{{idTarefas}}</td>
            <td>{{assunto}}</td>
            <td>{{prioridade}}</td>
            <td>{{autorRazaoSocial}}</td>
            <td>{{formatDate ultimaResposta "long"}}</td>
            <td>{{formatDate dataCriacao "long"}}</td>
            <td>{{idSprint}}</td>
          </tr>
          {{else}}

          {{/each}}
      </table>
    </div>

    <div class="row d-flex" style="width: 100%; justify-content: flex-end">
      <div class="field">
        <button class="btn align-self-center" style="width: 13ch; height: 4ch;">
          Visualizar
        </button>
