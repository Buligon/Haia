  <div class="col"></div>
  <div id="content" class="m-2 p-4 p-md-5 col-10">
    <div class="d-flex align-content-center " style="width: 100%;">
      <div class="field">
        <label for="dataInicial">Data Inicial:</label><br>
        <input class="dp06 data" type="date" id="dataInicial">
      </div>
      <div class="field" style="margin-left: 1ch;">
        <label for="dataFinal">Data Final:</label>
        <input class="dp06 data" type="date" id="dataFinal">
      </div>

      <div class="field">
        <label for="dropsprints">Sprint:</label>
        <select class="dropdown" name="sprint" id="dropsprints">
          <option value="sprint1">Todas</option>
          <option value="sprint2">2 - Sprint</option>
        </select>
      </div>

      <div class="field" id="search">
        <label for="search2">Pesquisa:</label>
        <input class="dp06" type="text" id="search2" size="30">
      </div>

      <div class="field">
        <label for="search">Critérios:</label>
        <select class="dropdown" name="searchfields" id="droppesquisa">
          <option value="codigo">Código</option>
          <option value="assunto">Assunto</option>
          <option value="Autor">Autor</option>
        </select>
      </div>

      <div class="field">
        <label for="status">Status:</label>
        <select class="dropdown" name="status" id="dropstatus">
          <option value="codigo">0 - Todos</option>
          <option value="assunto">1 - Análise</option>
          <option value="Autor">2 - Desenvolvimento</option>
        </select>
      </div>


      <div class="field d-flex align-content-center">
        <button type="button" class="btn btn-primary align-self-center filtrar" data-toggle="modal"
          data-target="#tagmodal">
          Tags
        </button>
      </div>

      <div class="field d-flex align-content-center">
        <button class="btn align-self-center filtrar" type="submit">
          Filtrar
        </button>
      </div>
    </div>

    <div id="grid" class="row m-2 table-responsive-xl">
      <table class="table table-striped table-dark table-bordered table-hover">
        <colgroup>
          <col span="1" style="min-width: 10ch; max-width: fit-content;">
          <col span="1" style="min-width: 30ch; max-width: fit-content;">
          <col span="1" style="min-width: 12ch; max-width: fit-content;">
          <col span="1" style="min-width: 20ch; max-width: fit-content;">
          <col span="1" style="min-width: 11ch; max-width: fit-content;">
          <col span="1" style="min-width: 11ch; max-width: fit-content;">
          <col span="1" style="min-width: 15ch; max-width: fit-content;">
        </colgroup>
        <thead>
          <tr>
            <th scope="col">Código</th>
            <th scope="col">Assunto</th>
            <th scope="col">Prioridade</th>
            <th scope="col">Autor</th>
            <th scope="col">Última resposta</th>
            <th scope="col">Data de criação</th>
            <th scope="col">Sprint</th>
          </tr>
        </thead>
        <tbody>
          {{#each Tarefa}}
          <tr {{!-- style="background-color: #DFA81B;" --}} onclick="abreTarefa({{idTarefas}})">
            <td class="codigo">{{idTarefas}}</td>
            <td>{{assunto}}</td>
            <td>{{prioridade}}</td>
            <td>{{autorRazaoSocial}}</td>
            <td>{{ultimaResposta}}</td>
            <td>{{dataCriacao}}</td>
            <td>{{idSprint}}</td>
          </tr>
          {{else}}

        {{/each}}
      </table>
    </div>

    <div class="row d-flex" style="width: 100%; justify-content: flex-end">
